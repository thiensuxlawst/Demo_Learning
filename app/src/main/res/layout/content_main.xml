<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.administrator.demo_learning.MainActivity"
    tools:showIn="@layout/activity_main"
    android:id="@+id/MainScreen">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màn hình 2"
        android:id="@+id/btnScr2"
        android:layout_x="82dp"
        android:layout_y="276dp"
        android:layout_below="@+id/btnCT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Countdown Timer"
        android:id="@+id/btnCT"
        android:layout_x="45dp"
        android:layout_y="369dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Random"
        android:id="@+id/btnRanDom"
        android:layout_x="74dp"
        android:layout_y="327dp"
        android:layout_below="@+id/btnScr2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="208dp"
        android:layout_height="57dp"
        android:text="BUTTON Lên Text"
        android:id="@+id/btn1"
        android:layout_x="15dp"
        android:layout_y="417dp"
        android:layout_below="@+id/editText"
        android:layout_alignRight="@+id/btnScr2"
        android:layout_alignEnd="@+id/btnScr2" />

    <EditText
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_x="20dp"
        android:layout_y="13dp"
        android:linksClickable="true"
        android:singleLine="true"
        android:layout_alignBottom="@+id/txt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:text="Nhap tu"
        android:id="@+id/txt1"
        android:layout_x="18dp"
        android:layout_y="84dp"
        android:textColor="#fe0505"
        android:textSize="50dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màn hình 3"
        android:id="@+id/btnMh3"
        android:layout_alignTop="@+id/btnScr2"
        android:layout_alignRight="@+id/txt1"
        android:layout_alignEnd="@+id/txt1" />

</RelativeLayout>

